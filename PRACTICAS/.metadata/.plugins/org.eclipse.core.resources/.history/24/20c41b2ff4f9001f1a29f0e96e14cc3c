package ar.edu.unlp.info.oo1._PiedraPapelOTijera;

public class Tabla {
	private int[][] resultados; 
	
	public Tabla() {
		this.resultados[0][0] = 0;
		this.resultados[0][1] = -1; 
		this.resultados[0][2] = 1; 
		this.resultados[1][0] = 1; 
		this.resultados[1][1] = 0; 
		this.resultados[1][2] = -1; 
		this.resultados[2][0] = -1; 
		this.resultados[2][1] = 1;
		this.resultados[2][2] = 0; 
	}
	
	public int getRes(int i, int j) {
		return resultados[i][j];
	}
}
