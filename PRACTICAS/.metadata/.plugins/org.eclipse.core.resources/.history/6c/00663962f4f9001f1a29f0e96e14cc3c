package ar.edu.unlp.info.oo1._PiedraPapelOTijera;

public class Tijera extends Opcion{
	public Tijera() {
		super(3); 
	}
	
	// MÃ‰TODOS
	public String comparar(Opcion opc) {
		if (opc.getIndex() == 1)
			return "Victoria del jugador 2";
		else if (opc.getIndex() == 2)
			return "Victoria del jugador 1"; 
		else
			return "Empate"; 
	}
}
